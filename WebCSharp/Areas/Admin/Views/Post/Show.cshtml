@*@model IEnumerable<WebCSharp.Models.EntityFrameWork.Menu>*@
@model WebCSharp.Models.EntityFrameWork.Post

@{
    ViewBag.Title = "Chi tiết bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Cập nhật danh mục</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active"><a href="/admin/post">Bài viết</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


}
<section class="content">
    @Html.HiddenFor(x => x.Id)
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết Menu</h3>

            <div class="card-tools">
                <a href="/admin/post" class="btn bg-success"><i class="fa fa-arrow-left"></i> Quay lại </a>
            </div>
        </div>
        <div class="card-body">








            <div class="card-body">
                <table class="table table-bordered border-success table-hover ">
                    <thead class="bg-green">
                        <tr class="fs-1">
                            <th width="30%">
                                Tên trường
                            </th>
                            <th>
                                Giá trị
                            </th>
                        </tr>
                    </thead>
                    <tbody>



                        <tr>
                            <th>Id</th>
                            <td>@Model.Id</td>


                        </tr>
                        <tr>
                            <th>Hình ảnh</th>
                            <td><img src="@Model.Image" width="200" /></td>
                        </tr>
                        <tr>
                            <th>Mã chủ đề(topic)</th>
                            <td>@Model.TopicId</td>
                        </tr>
                        <tr>
                            <th>Tiêu đề</th>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>@Model.Slug</td>
                        </tr>


                        <tr>
                            <th>Chi tiết</th>
                            <td>@Html.Raw(@Model.Detail)</td>
                        </tr>
                        <tr>
                            <th>Kiểu</th>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <th>Metakey</th>
                            <td>@Model.Metakey</td>
                        </tr>
                        <tr>
                            <th>Metadesc</th>
                            <td>@Model.Metadesc</td>
                        </tr>
                        <tr>
                            <th>Ngày tạo</th>
                            <td>@Model.Create_at</td>
                        </tr>
                        <tr>
                            <th>Người tạo</th>
                            <td>@Model.Create_By</td>
                        </tr>
                        <tr>
                            <th>Ngày sửa cuối</th>
                            <td>@Model.Update_at</td>
                        </tr>
                        <tr>
                            <th>Người sửa cuối</th>
                            <td>@Model.Update_By</td>
                        </tr>
                        <tr>
                            <th>Trạng thái</th>
                            <td>@Model.Status</td>
                        </tr>


                    </tbody>
                </table>
            </div>


            @*</div>*@
            <!-- /.card-body -->
            <div class="card-footer">
                Footer
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

</section>
<!-- /.card -->
