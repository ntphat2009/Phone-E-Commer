@model IEnumerable<WebCSharp.Models.EntityFrameWork.Brand>
@if (Model != null && Model.Any())
{

   
        <ul class="sidebar_categories">
            @foreach (var item in Model)
            {
                if (ViewBag.BrandId == item.Id)
                {
                    <li class="active"><a href="/thuong-hieu/@item.Slug-@(item.Id)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Name</a></li>
                }
                else
                {
                    <li><a href="/thuong-hieu/@item.Slug-@(item.Id)">@item.Name</a></li>
                }

            }
